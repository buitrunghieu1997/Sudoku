<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StartScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/start_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:paddingTop="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/logo_start"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                app:srcCompat="@drawable/logo_start" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <Button
                android:id="@+id/continue_btn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/continue_btn"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/start_btn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/start_btn"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/setting_btn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_btn"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/about_btn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/about_btn"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/quit_btn"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quit_btn"
                android:layout_margin="10dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>